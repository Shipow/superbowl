%body
  .filters-panel.hide.overlay
    %button.close{type: "button"} BACK
    .overlay-content
      %ul.filters
        %li
          %ul.tabs
            %li
              %a.active{href: "#years"} Years
              %a{href: "#brands"} Brands
      #years.tab-panel.active
      #brands.tab-panel
  .container-fluid
    %a.github-source{href: "https://github.com/Shipow/superbowl"}
      %svg
        %use{xlink:href: "#github-banner"}
    %header
      .please-be-kind
        %a.paul{href: "#"}
          .pulse
          %svg{role: "img"}
            %use{xlink:href: "#icon-hn"}
        %a.ryan{href: "#"}
          .pulse
          %svg{role: "img"}
            %use{xlink:href: "#icon-producthunt"}
        %a.mark{href: "#"}
          .pulse
          %svg{role: "img"}
            %use{xlink:href: "#icon-facebook"}
        %a.jack{href: "#"}
          .pulse
          %svg{role: "img"}
            %use{xlink:href: "#icon-twitter"}
      %h1
        %a{href: "/"}
          %img{src: "img/logo-superbowl.svg", alt: "Super Bowl Commercials search by Algolia"}
      %form.searchbox.sbx-custom{role: "search", novalidate: true, onsubmit="return false;"}
        %input#search.sbx-custom__input{type: "search", placeholder: "Search for a commercial", autocomplete: "off", required: true, spellcheck: false}
        %button.sbx-custom__submit{type: "submit"}
          %svg{role: "img", aria-label: "Search"}
            %use{xlink:href: "#sbx-icon-search-6"}
        %button.sbx-custom__reset{type: "reset"}
          %svg{role: "img", aria-label: "Reset"}
            %use{xlink:href: "#sbx-icon-clear-3"}
        %button.sbx-custom__filters{type: "button"}
          %svg{role: "img", aria-label: "Search"}
            %use{xlink:href: "#icon-filters"}
          %span filters

      %script#hit-template{type: "text/template"}
        %a.hit{href: "https://www.youtube.com/watch?v={{objectID}}",data-id: "{{objectID}}", style: "background-image: url('{{thumbnails.high.url}}')"}
          .hit-brand {{{_highlightResult.brand.value}}}
          .hit-name {{{_highlightResult.ad_name.value}}}
          .hit-season {{year}} - {{sbYear}}
          .hit-tags {{#_highlightResult._tags}} {{#matchedWords}} # {{matchedWords}}{{/matchedWords}} {{/_highlightResult._tags}}

    %main
      %section#topbar-results-control
        #refinements
      %section#results
      %section#pagination
      %span.poweredby Made with
        %span.KOOL
          %svg{role: "img", aria-label: "Search"}
            %use{xlink:href: "#icon-heart"}
         by
         %a.algolia{href: "https://www.algolia.com"} Algolia

  %script{src: "js/instantsearch.min.js"}
  %script{src: "js/app.js"}

  .svg-icons{style: "height: 0; width: 0; position: absolute; visibility: hidden"}
