%body
  .container-fluid
    %header
      %h1{datatext:"SuperBowl Ads"} SuperBowl Ads
      %form.searchbox.sbx-custom{role: "search", novalidate: true, onsubmit="return false;"}
        %input#search.sbx-custom__input{type: "search", placeholder: "Search for a commercial ad or brand", autocomplete: "off", required: true, spellcheck: false}
        %button.sbx-custom__submit{type: "submit"}
          %svg{role: "img", aria-label: "Search"}
            %title Icon Search
            %use{xlink:href: "#sbx-icon-search-6"}
        %button.sbx-custom__reset{type: "reset"}
          %svg{role: "img", aria-label: "Reset"}
            %title Icon Reset
            %use{xlink:href: "#sbx-icon-clear-3"}

          / Js: focus search input after reset
          :javascript
             document.querySelector('.searchbox [type="reset"]').addEventListener('click', function() {
               this.parentNode.querySelector('input').focus();
             });

          %script#hit-template{type: "text/template"}
            %a.hit{href: "#",dataid: "https://www.youtube.com/watch?v={{objectID}}", style: "background-image: url('{{thumbnails.high.url}}')"}
              .hit-brand {{{_highlightResult.brand.value}}}
              .hit-season {{year}} - {{sbYear}}

    %main
      %section#topbar-results-control
        %ul.filters
          %li Filters:
          %li#inception-filters
          %li#years
          %li#clear
      %section#topbar-refinements
      %section#results
      %section#pagination

  %footer
    Made with love by <span>Algolia</span>
  %script{src:  "js/app.js"}

  .svg-icons{style: "height: 0; width: 0; position: absolute; visibility: hidden"}
